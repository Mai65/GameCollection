<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spam.finnh.gamecollection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">
        >
        <activity android:name=".Menues.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TicTacToe.TicTacToe_playarea"
            android:parentActivityName=".TicTacToe.TicTacToe_playarea" />
        <activity
            android:name=".TicTacToe.TicTacToe_popwindow"
            android:parentActivityName=".TicTacToe.TicTacToe_playarea" />
        <activity android:name=".Connect4.Connect4_playarea" />
        <activity android:name=".Connect4.Connect4_wonScreen" />
        <activity android:name=".Battleship.Battleship_playarea" />
        <activity android:name=".Instructions.TicTacToe_instructions" />
        <activity android:name=".Menues.Help" />
        <activity android:name=".Instructions.Battleship_instructions" />
        <activity android:name=".Instructions.Connect4_instructions" />
        <activity
            android:name=".Menues.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>